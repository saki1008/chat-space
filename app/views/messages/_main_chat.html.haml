.chat-main
  .main_header
    .main_header__left-box
      %h2.main_header__left-box__current-group
        = @group.name
      %ul.main_header__leht-box__member-list
        - @group.users.each do |user|
          =user.name
        %li.main_header__leht-box__member-list__menber
          
    = link_to "#" do
      .main_header__edit-btn
        = link_to "Edit", edit_group_path(params[:group_id]), method: :get
  .messages
    = render @messages
        
  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'form__message', placeholder: 'type a message'
      .form__mask
        = f.label :image, class: 'form__mask__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'
  